# OpenHands SaaS Configuration
# This configuration enables database storage and authentication

# ====================
# Database Configuration
# ====================
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=qlurplatform
DB_USERNAME=postgres
DB_PASSWORD=postgres

# ====================
# Storage Configuration
# ====================
# Enable database backend for user data
STORAGE_BACKEND=database

# File storage for events and workspace files
FILE_STORE=local
FILE_STORE_PATH=./workspace

# Optional: Use MinIO for file storage (uncomment to enable)
# FILE_STORE=s3
# AWS_ACCESS_KEY_ID=herd
# AWS_SECRET_ACCESS_KEY=secretkey
# AWS_S3_BUCKET=qlurplatform
# AWS_S3_ENDPOINT=https://minio.herd.test
# AWS_S3_SECURE=true
# AWS_DEFAULT_REGION=us-east-1
# AWS_S3_VERIFY_SSL=false

# ====================
# Authentication
# ====================
# JWT Secret for authentication (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-secret-key-change-this-in-production-please

# Session Configuration
SESSION_LIFETIME=3600            # 1 hour in seconds
REMEMBER_ME_LIFETIME=2592000     # 30 days in seconds

# Cookie Configuration
COOKIE_DOMAIN=                   # Leave empty for current domain
COOKIE_SECURE=false              # Set to true in production with HTTPS
CSRF_SECRET=your-csrf-secret-change-this-in-production

# GitHub OAuth settings
GITHUB_CLIENT_ID=Ov23lidsCzTuH03hiWQV
GITHUB_CLIENT_SECRET=1323472ae2f236211ef82bccdf9cd741a70b3edf
GITHUB_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/github/callback

# ====================
# Server Configuration
# ====================
PORT=3000
port=3000
HOST=0.0.0.0
DEBUG=true

# ====================
# LLM Configuration
# ====================
# Add your LLM API key here
LLM_MODEL=anthropic/claude-3-5-sonnet
# LLM_API_KEY=your-api-key-here

# ====================
# Optional: Redis for caching
# ====================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ====================
# Frontend Configuration
# ====================
FRONTEND_URL=http://localhost:3001
PERMITTED_CORS_ORIGINS=http://localhost:3001

# ====================
# OpenHands Settings
# ====================
MAX_ITERATIONS=100
DISABLE_COLOR=false
WORKSPACE_BASE=./workspace
SERVE_FRONTEND=false
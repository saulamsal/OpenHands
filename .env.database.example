# Database Configuration for OpenHands SaaS Mode
# Copy this to .env to enable database storage and authentication

# Enable database storage backend
STORAGE_BACKEND=database

# Database connection settings
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=qlurplatform
DB_USERNAME=postgres
DB_PASSWORD=postgres

# JWT Secret for authentication (change this in production!)
JWT_SECRET=your-secret-key-change-this-in-production

# Enable multi-tenant features
ENABLE_MULTI_TENANT=true

# Use database implementations for storage
SETTINGS_STORE_CLASS=openhands.storage.database.stores.DatabaseSettingsStore
SECRET_STORE_CLASS=openhands.storage.database.stores.DatabaseSecretsStore
CONVERSATION_STORE_CLASS=openhands.storage.database.stores.DatabaseConversationStore
USER_AUTH_CLASS=openhands.server.user_auth.database_user_auth.DatabaseUserAuth

# File storage for events (can be S3/MinIO in production)
FILE_STORE=local
FILE_STORE_PATH=./workspace

# Redis for caching (optional but recommended)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# LLM Configuration (your existing settings)
LLM_MODEL=anthropic/claude-3-5-sonnet
LLM_API_KEY=your-api-key-here

# Server settings
PORT=3000
HOST=0.0.0.0

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001